    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Default",
            "program": "${workspaceFolder}/dist/index.js",
            "args": [],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
